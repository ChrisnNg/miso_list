<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Miso list</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <!--Layout CSS-->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <!--Nav CSS-->
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <!--Header CSS-->
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <!--Main CSS-->
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <!--ListItems CSS-->
    <link rel="stylesheet" href="/styles/listItem.css" type="text/css" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <!--Font Awesome-->
    <script src="https://kit.fontawesome.com/f07023f341.js"></script>
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0' />
    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Roboto&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="gridLayered">
        <div class="leftContainer">
          <a class="leftItem" href="#header">
            <img class="navimg" src ="https://www.sccpre.cat/mypng/detail/172-1728754_japanese-akita-icon-wrapping-paper-shiba-inu.png" >
          </a>
          <a class="iconLinks leftItem" href="#bookList">
            <i class="fas fa-book fa-2x"></i>
          </a>
          <a class="iconLinks leftItem" href="#movieList">
            <i class="fas fa-tv fa-2x"></i>
          </a>
          <a class="iconLinks leftItem" href="#restList">
            <i class="fas fa-utensils fa-2x"></i>
          </a>
          <a class="iconLinks leftItem" href="#productList">
            <i class="fas fa-shopping-cart fa-2x"></i>
          </a>
          <a class="iconLinks leftItem" href="#miscList">
            <i class="fas fa-clipboard-list fa-2x"></i>
          </a>
          <a class="iconLinks leftItem" href="#archiveList">
            <i class="fas fa-check-square fa-2x"></i>
          </a>
        </div>
    </nav>
    <header id="header">
      <div class="centerHeader">
          <h1 id="headerTitle">Miso, fetch!</h1>
          <form action="/" method="POST" class="headerItem">
            <input type="text" name="searchEngine" style="width: 200px; margin: 1em">
            <button type="submit" class="btn btn-outline-dark">Add to List</button>
          </form>
      </div>
    </header>
    <main>
      <% if (results) { %>
        <!-- BOOKS -->
        <div id="bookList" aria-hidden="true"/>
        <h2 class="listTitle">Books</h2>
        <% let books = results['books']; %>
        <% for (let book of books) { %>
          <div class="toDoList">
            <div class="itemHeader">
                <a href='/<%= book['name'] %>' class="leftItem itemTitleHeader"><h4><%= book['name'] %></h4></a><br>
                <a href="<%= book['link'] %>" class="rightItem"><button class="btn btn-outline-dark">goodreads</button></a>
            </div>
            <p><%= book['context'] %></p>
        </div>
      <% } %>

        <!-- MOVIES AND SERIES -->
        <div id="movieList" aria-hidden="true"/>
        <h2 class="listTitle">Movies & TV Series</h2>
        <% let movies = results['movies_and_series']; %>
        <% for (let movie of movies) { %>
          <div class="toDoList">
            <div class="itemHeader">
              <a href='/<%= movie['name']%>' class="leftItem itemTitleHeader"><h4><%= movie['name'] %></h4></a><br>
              <a href="<%= movie['link'] %>" class="rightItem"><button class="btn btn-outline-dark">IMDB</button></a>
            </div>
            <p><%= movie['context'] %></p>
          </div>
        <% } %>

        <!-- RESTAURANTS -->
        <div id="restList" aria-hidden="true"/>
        <h2 class="listTitle">Restaurants</h2>
        <% let restaurants = results['restaurants']; %>
        <% for (let restaurant of restaurants) { %>
          <div class="toDoList">
            <div class="itemHeader">
              <a href='/<%= restaurant['name']%>' class="leftItem itemTitleHeader"><h4><%= restaurant['name'] %></h4></a><br>
              <a href="<%= restaurant['link'] %>" class="rightItem"><button class="btn btn-outline-dark">Zomato</button></a>
            </div>
            <p><%= restaurant['context'] %></p>
          </div>
        <% } %>

        <!-- PRODUCTS -->
        <div id="productList" aria-hidden="true"/>
          <h2 class="listTitle">Products</h2>
          <% let products = results['products']; %>
          <% for (let product of products) { %>
            <div class="toDoList">
              <div class="itemHeader">
                <a href='/<%= product['name']%>' class="leftItem itemTitleHeader"><h4><%= product['name'] %></h4></a><br>
                <a href="<%= product['link'] %>" class="rightItem"><button class="btn btn-outline-dark">Amazon</button></a>
              </div>
              <p><%= product['context'] %></p>
            </div>
        <% } %>

        <!-- MISC -->
        <div id="miscList" aria-hidden="true"/>
          <h2 class="listTitle">Miscellaneous</h2>
          <% let misc = results['misc']; %>
          <% for (let mis of misc) { %>
            <div class="toDoList">
              <div class="itemHeader">
                <a href='/<%= mis['name']%>' class="leftItem itemTitleHeader"><h4><%= mis['name'] %></h4></a><br>
              </div>
              <p><%= mis['context'] %></p>
            </div>
        <% } %>
  <% } %>

        <% if (results) { %>
        <!-- Archived -->
        <div id="archiveList" aria-hidden="true"/>
          <h2 class="listTitle">Archived</h2>
          <% let archivedBooks = archives['books']; %>
          <% let archivedMovies = archives['movies_and_series']; %>
          <% let archivedRest = archives['restaurants']; %>
          <% let archivedProducts = archives['products']; %>
          <% let archivedMisc = archives['misc']; %>
          <div class="toDoList">
          <% for (let archive of archivedBooks) { %>
              <div class="itemHeader">
                <a href='/<%= archive['name']%>' class="leftItem itemTitleHeader"><h4><%= archive['name'] %></h4></a><br>
                <div class="rightContainer">
                  <a href="<%= archive['link'] %>" class="rightItem"><button class="btn btn-outline-dark">goodreads</button></a>
                  <!-- <form class="form-delete" action="/:list_item/delete" method="POST"> -->
                    <button type="submit" name='unarchive' class="btn btn-danger rightItem">Unarchive</button>
                  <!-- </form> -->
                </div>
              </div>
              <p><%= archive['context'] %></p>
            </div>
          <% } %>
          <div class="toDoList">
          <% for (let archive of archivedMovies) { %>
            <div class="itemHeader">
              <a href='/<%= archive['name']%>' class="leftItem itemTitleHeader"><h4><%= archive['name'] %></h4></a><br>
              <div class="rightContainer">
                  <a href="<%= archive['link'] %>" class="rightItem"><button class="btn btn-outline-dark">IMDB</button></a>
                  <!-- <form class="form-delete" action="/:list_item/delete" method="POST"> -->
                    <button type="submit" name='unarchive' class="btn btn-danger rightItem">Unarchive</button>
                  <!-- </form> -->
                </div>
            </div>
            <p><%= archive['context'] %></p>
          </div>
          <% } %>
          <div class="toDoList">
          <% for (let archive of archivedRest) { %>
            <div class="itemHeader">
              <a href='/<%= archive['name']%>' class="leftItem itemTitleHeader"><h4><%= archive['name'] %></h4></a><br>
              <div class="rightContainer">
                  <a href="<%= archive['link'] %>" class="rightItem"><button class="btn btn-outline-dark">Zomato</button></a>
                  <!-- <form class="form-delete" action="/:list_item/delete" method="POST"> -->
                    <button type="submit" name='unarchive' class="btn btn-danger rightItem">Unarchive</button>
                  <!-- </form> -->
                </div>
            </div>
            <p><%= archive['context'] %></p>
          </div>
          <% } %>
          <div class="toDoList">
          <% for (let archive of archivedProducts) { %>
            <div class="itemHeader">
              <a href='/<%= archive['name']%>' class="leftItem itemTitleHeader"><h4><%= archive['name'] %></h4></a><br>
              <div class="rightContainer">
                  <a href="<%= archive['link'] %>" class="rightItem"><button class="btn btn-outline-dark">Amazon</button></a>
                  <!-- <form class="form-delete" action="/:list_item/delete" method="POST"> -->
                    <button type="submit" name='unarchive' class="btn btn-danger rightItem">Unarchive</button>
                  <!-- </form> -->
                </div>
            </div>
            <p><%= archive['context'] %></p>
          </div>
          <% } %>
          <div class="toDoList">
          <% for (let archive of archivedMisc) { %>
            <div class="itemHeader">
              <a href='/<%= archive['name']%>' class="leftItem itemTitleHeader"><h4><%= archive['name'] %></h4></a><br>
              <div class="rightContainer">
                  <!-- <form class="form-delete" action="/:list_item/delete" method="POST"> -->
                    <button type="submit" name='unarchive' class="btn btn-danger rightItem">Unarchive</button>
                  <!-- </form> -->
                </div>
            </div>
            <p><%= archive['context'] %></p>
          </div>
          <% } %>
      <% } %>
  </main>
  </body>
</html>
